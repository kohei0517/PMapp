製品発注計画ページ


<% if @alert_message %>
  <div class="alert alert-warning">
    <%= @alert_message %>
  </div>
<% end %>

<%= form_with(model: [@count_day,@export_plan],local: true) do |form| %>

<%= render 'shared/error_messages', model: form.object %>

    <div class="field">
      <%= form.label "生産製品製品管理番号" %>
      <%= form.text_field :product_nums %>
    </div>

    <div class="field">
      <%= form.label "生産個数(本数)" %>
      <%= form.text_field :count %>
    </div>

    <div class="field">
      <%= form.label "発注日" %>
      <%= form.date_field :export_day %>
    </div>

  <div class="actions">
    <%= form.submit "生産計画登録！" %>
  </div>
<% end %>
